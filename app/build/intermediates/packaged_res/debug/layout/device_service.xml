<?xml version="1.0" encoding="utf-8"?>
                                                                   
    
                 
                       
                                                            
           

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_servis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/green_background" android:tag="layout/device_service_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/nazwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Połączono z:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/servisy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Serwisy:"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/servises"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/charakterystyki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Charakterystyki:"
                    android:textSize="16dp"
                     />

                <TextView
                    android:id="@+id/gatt_costam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textSize="14dp" />




            </androidx.appcompat.widget.LinearLayoutCompat>

            <Button
                android:id="@+id/led_button"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:text="Dioda"
                android:layout_marginRight="6dp"
                android:textSize="9dp" />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_favorite_border_24"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
         